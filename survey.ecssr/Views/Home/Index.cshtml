@model SurveyViewModel

<div class="row">
    <p>
        @Model.Title
    </p>
    <p>
        @Model.Description
    </p>
</div>

<div>
    <form action="/Home/Index" method="post">
        <input type="hidden" asp-for="@Model.Title" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @for (var i = 0; i < Model.QuestionViewModel.Count(); i++)
        {
            var question = Model.QuestionViewModel[i];

            <div class="question">
                @{
                    <label>@question.Text</label> <br />
                }

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.QuestionViewModel[i].Id " />
                <input type="hidden" asp-for="@Model.QuestionViewModel[i].Text" />
                <input type="hidden" asp-for="@Model.QuestionViewModel[i].SurveyId" />
                <input type="hidden" asp-for="@Model.QuestionViewModel[i].ControlTypeId" />

                <div class="answer">
                    @switch (question.ControlTypeId)
                    {
                        case (int)ControlTypes.SingleLineTextBox:

                            for (int j = 0; j < question.OptionsViewModel.Count; j++)
                            {
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Id " />
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Text" />


                                <label>
                                    <input asp-for="@Model.QuestionViewModel[i].SelctedAnswer" />
                                    @question.OptionsViewModel[j].Text
                                </label>

                                <span asp-validation-for="@Model.QuestionViewModel[i].SelctedAnswer" class="text-danger"></span>

                                @* <input asp-for="@Model.QuestionViewModel[i].SelctedAnswer" formnovalidate="formnovalidate" class="form-control" />
 *@
                            }

                            break;
                        case (int)ControlTypes.MultiLineTextBox:
                            break;
                        case (int)ControlTypes.CheckBoxList:
                            for (int j = 0; j < question.OptionsViewModel.Count; j++)
                            {
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Id " />
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Text" />


                                <label>
                                    @* <input type="checkbox"
                    name="selectedAns"
                    value="@question.OptionsViewModel[j].Id" /> @question.OptionsViewModel[j].Text *@
                                    <input type="checkbox" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].IsSelected" required /> @question.OptionsViewModel[j].Text
                                </label>

                                @if (question.OptionsViewModel[j].HasExtraComment)
                                {
                                    <input asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].ExtraComments" required />
                                }
                            }

                            break;
                        case (int)ControlTypes.YesOrNo:

                            for (int j = 0; j < question.OptionsViewModel.Count; j++)
                            {
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Id " />
                                <input type="hidden" asp-for="@Model.QuestionViewModel[i].OptionsViewModel[j].Text" />

                                <label>
                                    @*  <input type="radio" name="@question.OptionsViewModel[j].QuestionId"
                    asp-for='@Model.QuestionViewModel[i].SelctedAnswer' value="@question.OptionsViewModel[j].Id" /> *@
                                    <input type="radio" asp-for="@Model.QuestionViewModel[i].SelctedAnswer" value="@question.OptionsViewModel[j].Id" required />
                                    @question.OptionsViewModel[j].Text
                                </label>
                            }
                            break;
                        case (int)ControlTypes.SingleSelect:

                            break;
                        case (int)ControlTypes.MultiSelect:
                            break;
                    }

                </div>
            </div>

        }
        <input type="submit" value"Submit" />
    </form>
</div>

